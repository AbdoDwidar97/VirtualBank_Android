<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abdelrahman.virtualbank.Login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/VwUserID"
        android:text="Card ID :"
        android:textSize="18dp"
        android:padding="8dp"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/TxtUserID"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/VwUserID"
        android:padding="8dp"
        />


    <TextView
        android:id="@+id/VwUserPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TxtUserID"
        android:padding="8dp"
        android:text="Password :"
        android:textSize="18dp" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/TxtUserPwd"
        android:textSize="20dp"
        android:layout_below="@+id/VwUserID"
        android:layout_toRightOf="@+id/VwUserPwd"
        android:inputType="textPassword"
        android:padding="8dp"
        />

    <Button
        android:id="@+id/BtnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/TxtUserPwd"
        android:layout_alignRight="@+id/TxtUserPwd"
        android:layout_below="@+id/TxtUserPwd"
        android:layout_marginTop="86dp"
        android:background="@color/BtnLogin"
        android:padding="8dp"
        android:text="Login"
        android:onClick="GoLogin"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/CreateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/BtnLogin"
        android:layout_marginTop="36dp"
        android:background="@color/BtnCreate"
        android:onClick="GoToCreateForm"
        android:padding="8dp"
        android:text="Create Account"
        android:textAllCaps="false" />

</RelativeLayout>
